<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#ff008080"
                android:endColor="#ff00e0e0"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff000000" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#ff008080"
                android:startColor="#ff00e0e0"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff000000" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#ff008000"
                android:startColor="#ff008000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff000000" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>